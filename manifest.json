{
    "name": "Full Sort Bookmark Manager",
    "description": "Add a link to your Full Sort account!",
    "version": "1.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://www.fullsort.com/",
        "https://app.fullsort.com/",
        "https://fullsort.com/"
    ],
    "action": {
        "default_title": "Bookmark URL",
        "default_popup": "popup/bookmark.html"
    },
    "icons": {
        "16": "icons/favicon-16x16.png",
        "32": "icons/favicon-32x32.png",
        "192": "icons/android-chrome-192x192.png"
    }
}
